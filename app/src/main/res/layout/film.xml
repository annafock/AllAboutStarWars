<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.allaboutstarwars.DetailActivity">

        <TextView
            android:id="@+id/text_view_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="40sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/text_view_characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characters"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_characters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_view_planets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="Planets"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_planets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_view_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_species"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_view_starships"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starships"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_starships"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_view_vehicles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicles"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_vehicles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />


    </LinearLayout>
</ScrollView>
